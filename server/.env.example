# App
NODE_ENV=development
PORT=4000
HOST=0.0.0.0

# Database
DATABASE_URL="mysql://root:rootpassword@localhost:3306/glowge"

# Redis
REDIS_URL="redis://localhost:6379"

# JWT
JWT_SECRET="change-this-to-a-secure-random-string-at-least-32-chars"
JWT_ACCESS_EXPIRY="15m"
JWT_REFRESH_EXPIRY="7d"

# CORS
CORS_ORIGIN="http://localhost:3001"

# Cookies (set for production — domain must match client + API parent domain)
# COOKIE_DOMAIN=".glow.ge"
# COOKIE_SECURE=true

# App URL (used for referral links and email links)
APP_URL="http://localhost:3001"

# Email (Resend)
RESEND_API_KEY="re_your_key_here"
EMAIL_FROM="noreply@glow.ge"

# AI Image Generation — switch provider: "gemini" or "openai"
AI_PROVIDER="gemini"

# Gemini config (used when AI_PROVIDER=gemini)
GEMINI_API_KEY="your-gemini-key-here"
GEMINI_IMAGE_MODEL="gemini-2.5-flash-preview-04-17"
# Gemini text model (used for caption generation)
GEMINI_TEXT_MODEL="gemini-2.5-flash"

# OpenAI config (used when AI_PROVIDER=openai)
OPENAI_API_KEY=""
OPENAI_IMAGE_MODEL="gpt-image-1"
OPENAI_IMAGE_COUNT=1
# Switch preset: "low" (fast/cheap) or "high" (max quality)
OPENAI_IMAGE_PRESET="low"

# Launch Mode — free-for-all with daily generation limits
# Set to true for free launch, false for normal credit/subscription system
LAUNCH_MODE=true
LAUNCH_DAILY_LIMIT=5

# Watermark & Download Quality
# Master switch: set to false to disable ALL watermarks (Glow.GE + branding)
WATERMARK_ENABLED=false
# JPEG quality for downloads when watermarks are applied (1-100). 100 = max quality.
IMAGE_DOWNLOAD_QUALITY=100
# Output format: "png" (lossless, ultra high quality) or "jpeg" (smaller files)
IMAGE_DOWNLOAD_FORMAT=png
